<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_category_location"
        android:title="Location">

        <SwitchPreference
            android:key="switch_location"
            android:title="Location enabled" />

        <Preference
            android:key="button_choose_location"
            android:title="Choose location" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="pref_category_theme"
            android:title="Theme mod">

        <SwitchPreference
                android:key="switch_theme"
                android:title="Theme mod enabled" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_category_logcat"
        android:title="Update hooks">

        <Preference
            android:key="button_update"
            android:title="Update hooks" />

    </PreferenceCategory>

</PreferenceScreen>
